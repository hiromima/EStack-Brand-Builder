{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://brand-builder.ai/schemas/Feasibility.json",
  "title": "FeasibilityEvaluation",
  "description": "実行可能性評価スキーマ - Brand Builder Evaluation System",
  "type": "object",
  "required": ["overallScore", "dimensions", "timestamp"],
  "properties": {
    "overallScore": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "総合スコア (0-100)"
    },
    "dimensions": {
      "type": "object",
      "required": [
        "technicalFeasibility",
        "resourceRequirements",
        "timeline",
        "budgetAlignment",
        "riskLevel"
      ],
      "properties": {
        "technicalFeasibility": {
          "type": "object",
          "required": ["score", "feedback"],
          "properties": {
            "score": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "技術的実現可能性スコア"
            },
            "feedback": {
              "type": "string",
              "description": "フィードバック"
            },
            "evidence": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "根拠"
            }
          }
        },
        "resourceRequirements": {
          "type": "object",
          "required": ["score", "feedback"],
          "properties": {
            "score": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "リソース要件スコア"
            },
            "feedback": {
              "type": "string",
              "description": "フィードバック"
            },
            "evidence": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "根拠"
            }
          }
        },
        "timeline": {
          "type": "object",
          "required": ["score", "feedback"],
          "properties": {
            "score": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "タイムライン妥当性スコア"
            },
            "feedback": {
              "type": "string",
              "description": "フィードバック"
            },
            "evidence": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "根拠"
            }
          }
        },
        "budgetAlignment": {
          "type": "object",
          "required": ["score", "feedback"],
          "properties": {
            "score": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "予算整合性スコア"
            },
            "feedback": {
              "type": "string",
              "description": "フィードバック"
            },
            "evidence": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "根拠"
            }
          }
        },
        "riskLevel": {
          "type": "object",
          "required": ["score", "feedback"],
          "properties": {
            "score": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "リスクレベルスコア (低リスク=高スコア)"
            },
            "feedback": {
              "type": "string",
              "description": "フィードバック"
            },
            "evidence": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "根拠"
            }
          }
        }
      },
      "description": "評価次元"
    },
    "strengths": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "強み"
    },
    "weaknesses": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "弱み"
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "改善提案"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "評価日時 (ISO 8601)"
    },
    "evaluator": {
      "type": "string",
      "enum": ["claude-sonnet-4.5", "gpt-5", "gemini-2.5-pro"],
      "description": "評価モデル"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "description": "スキーマバージョン"
        },
        "evaluationId": {
          "type": "string",
          "description": "評価 ID"
        }
      }
    }
  },
  "additionalProperties": false
}
